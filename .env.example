# Version: v1.0.0
# Created: September 4, 2025 - 2:40 PM UTC
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your_super_secret_key_here_change_this_in_production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/magic_adventure

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379/0

# OpenAI API (for CrewAI agents)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Security
BCRYPT_ROUNDS=12

# Monitoring and Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_AI_AGENTS=true
ENABLE_WEBSOCKETS=true
ENABLE_REGISTRATION=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CHAT_MESSAGES_PER_MINUTE=10

# Game Configuration
MAX_PLAYERS_PER_WORLD=100
WORLD_UPDATE_INTERVAL=300
AGENT_UPDATE_INTERVAL=60